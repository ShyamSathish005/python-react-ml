{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@python-react-ml/core": ["./packages/core/src"],
      "@python-react-ml/react": ["./packages/react/src"],
      "@python-react-ml/react-native": ["./packages/react-native/src"],
      "@python-react-ml/cli": ["./packages/cli/src"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "examples/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "*.config.js"
  ]
}